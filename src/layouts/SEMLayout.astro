---
import BaseLayout from './BaseLayout.astro'
import SEMHeader from '../components/sem/SEMHeader.astro'
import SEMFooter from '../components/sem/SEMFooter.astro'

interface Props {
  title: string
  description?: string
  ogImage?: string
  canonical?: string
  noIndex?: boolean
}

const { title, description, ogImage, canonical, noIndex } = Astro.props
---

<BaseLayout
  title={title}
  description={description}
  ogImage={ogImage}
  canonical={canonical}
  noIndex={noIndex}
>
  <slot name="head" slot="head" />
  <div class="min-h-screen bg-white">
    <SEMHeader />
    <main>
      <slot />
    </main>
    <SEMFooter />
  </div>
</BaseLayout>
