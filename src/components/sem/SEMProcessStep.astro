---
interface Props {
  number: number
  title: string
  description: string
}

const { number, title, description } = Astro.props
---

<div class="text-center">
  <div class="mx-auto flex h-14 w-14 items-center justify-center rounded-full border-2 border-teal text-xl font-medium text-teal-solid">
    {number}
  </div>
  <h3 class="mt-4 font-accent text-h4 font-medium text-heading">
    {title}
  </h3>
  <p class="mt-2 text-sm leading-relaxed text-text-body">
    {description}
  </p>
</div>
