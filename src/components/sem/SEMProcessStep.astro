---
interface Props {
  number: number
  title: string
  description: string
}

const { number, title, description } = Astro.props
---

<div class="text-center">
  <div class="mx-auto flex h-16 w-16 items-center justify-center rounded-full bg-accent-blue text-2xl font-bold text-white">
    {number}
  </div>
  <h3 class="mt-4 text-h4 font-bold text-text-dark">
    {title}
  </h3>
  <p class="mt-2 text-sm leading-relaxed text-text-body">
    {description}
  </p>
</div>
