---
interface Props {
  title: string
  subtitle?: string
}

const { title, subtitle } = Astro.props
---

<div class="mx-auto max-w-3xl text-center">
  <h2 class="font-accent text-h2 font-bold text-text-dark">
    {title}
  </h2>
  {subtitle && (
    <p class="mt-4 text-lead text-text-body">
      {subtitle}
    </p>
  )}
</div>
