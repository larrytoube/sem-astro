---
interface Props {
  title: string
  client: string
  category: string
  description: string
  href: string
  image: string
  logo?: string
  date?: string
  duration?: string
}

const { title, client, category, description, href, image, logo, date, duration } = Astro.props
---

<a
  href={href}
  class="group block"
>
  <div class="grid overflow-hidden rounded-2xl bg-white shadow-card transition-all duration-300 hover:shadow-card-hover md:grid-cols-[1.2fr_1fr]">
    <!-- Image -->
    <div class="relative h-64 overflow-hidden md:h-[320px]">
      <img
        src={image}
        alt={title}
        class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105"
        loading="lazy"
      />
      {logo && (
        <div class="absolute inset-0 flex items-center justify-center bg-teal-dark/80 opacity-0 transition-opacity duration-300 group-hover:opacity-100">
          <img src={logo} alt={client} class="h-16 w-auto max-w-[70%] object-contain brightness-0 invert" loading="lazy" />
        </div>
      )}
    </div>

    <!-- Content -->
    <div class="flex flex-col justify-center p-8">
      <h2 class="font-accent text-h3 font-medium text-heading transition-colors group-hover:text-teal-solid">{title}</h2>
      <p class="mt-4 text-sm leading-relaxed text-text-body line-clamp-3">{description}</p>

      <!-- Metadata Row -->
      <div class="mt-6 grid grid-cols-2 gap-4 border-t border-border pt-6 sm:grid-cols-4">
        <div>
          <p class="text-xs font-medium uppercase tracking-wider text-text-muted">Client</p>
          <p class="mt-1 text-sm font-medium text-heading">{client}</p>
        </div>
        <div>
          <p class="text-xs font-medium uppercase tracking-wider text-text-muted">Project Type</p>
          <p class="mt-1 text-sm font-medium text-heading">{category}</p>
        </div>
        {date && (
          <div>
            <p class="text-xs font-medium uppercase tracking-wider text-text-muted">Date</p>
            <p class="mt-1 text-sm font-medium text-heading">{date}</p>
          </div>
        )}
        {duration && (
          <div>
            <p class="text-xs font-medium uppercase tracking-wider text-text-muted">Duration</p>
            <p class="mt-1 text-sm font-medium text-heading">{duration}</p>
          </div>
        )}
      </div>

      <!-- View Now Link -->
      <div class="mt-6">
        <span class="inline-flex items-center gap-2 text-sm font-medium text-teal-solid transition-colors group-hover:text-teal-dark">
          View Now
          <svg class="h-4 w-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M7 17L17 7M17 7H7M17 7v10" />
          </svg>
        </span>
      </div>
    </div>
  </div>
</a>
