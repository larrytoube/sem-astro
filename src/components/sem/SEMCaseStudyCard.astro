---
interface Props {
  title: string
  client: string
  category: string
  description: string
  href: string
}

const { title, client, category, description, href } = Astro.props
---

<a
  href={href}
  class="group block overflow-hidden rounded-xl border border-border bg-white transition-all hover:shadow-card-hover"
>
  <div class="h-52 bg-bg-light flex items-center justify-center">
    <span class="font-accent text-2xl text-text-muted">{client}</span>
  </div>
  <div class="p-6">
    <span class="text-label font-semibold uppercase tracking-wider text-teal-solid">{category}</span>
    <h3 class="mt-2 font-accent text-h4 font-medium text-heading transition-colors group-hover:text-teal-solid">
      {title}
    </h3>
    <p class="mt-2 text-sm leading-relaxed text-text-body">
      {description}
    </p>
    <span class="mt-4 inline-flex items-center gap-1 text-sm font-medium text-teal-solid">
      View Now
      <svg class="h-4 w-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
      </svg>
    </span>
  </div>
</a>
