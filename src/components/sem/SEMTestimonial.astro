---
interface Props {
  quote: string
  author: string
  company?: string
}

const { quote, author, company } = Astro.props
---

<blockquote class="rounded-xl bg-bg-light p-8">
  <p class="text-body-lg italic text-text-body">
    &ldquo;{quote}&rdquo;
  </p>
  <footer class="mt-4">
    <p class="font-medium text-heading">{author}</p>
    {company && <p class="text-sm text-text-muted">{company}</p>}
  </footer>
</blockquote>
