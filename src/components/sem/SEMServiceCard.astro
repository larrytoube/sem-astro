---
interface Props {
  number: string
  title: string
  description: string
  href: string
}

const { number, title, description, href } = Astro.props
---

<a
  href={href}
  class="service-card group flex flex-col rounded-[32px] bg-bg-light p-8 transition-all duration-300 hover:bg-[rgba(8,109,114,0.82)]"
>
  <div class="flex items-start justify-between">
    <span class="text-[2rem] font-light leading-none text-border-solid transition-colors duration-300 group-hover:text-white/40">{number}</span>
    <svg class="h-5 w-5 text-teal-solid transition-colors duration-300 group-hover:text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" d="M7 17L17 7M17 7H7M17 7v10" />
    </svg>
  </div>
  <h3 class="mt-6 font-accent text-h4 font-medium text-heading transition-colors duration-300 group-hover:text-white">
    {title}
  </h3>
  <p class="mt-3 text-sm leading-relaxed text-text-body transition-colors duration-300 group-hover:text-white/80">
    {description}
  </p>
  <span class="mt-auto pt-6 inline-flex items-center gap-1.5 text-sm font-medium text-teal-solid transition-colors duration-300 group-hover:text-white">
    Learn More
    <svg class="h-4 w-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
    </svg>
  </span>
</a>
