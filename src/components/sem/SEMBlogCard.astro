---
interface Props {
  title: string
  description: string
  category: string
  date: string
  href: string
  image?: string
  featured?: boolean
}

const { title, description, category, date, href, image, featured = false } = Astro.props
---

{featured ? (
  <a href={href} class="group block overflow-hidden rounded-xl border border-border bg-white transition-all hover:shadow-card-hover md:col-span-2 md:grid md:grid-cols-2">
    <div class="relative h-64 md:h-full bg-bg-light overflow-hidden">
      {image ? (
        <img src={image} alt={title} class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105" loading="lazy" />
      ) : (
        <div class="flex h-full items-center justify-center">
          <span class="font-accent text-xl text-text-muted">Image</span>
        </div>
      )}
    </div>
    <div class="flex flex-col justify-center p-8">
      <div class="flex items-center gap-2 text-xs text-text-muted">
        <span class="font-medium text-teal-solid">{category}</span>
        <span class="h-1 w-1 rounded-full bg-text-muted" />
        <span>{date}</span>
      </div>
      <h3 class="mt-3 font-accent text-h3 font-medium text-heading transition-colors group-hover:text-teal-solid">
        {title}
      </h3>
      <p class="mt-3 text-sm leading-relaxed text-text-body line-clamp-3">
        {description}
      </p>
      <span class="mt-4 inline-flex items-center gap-2 text-sm font-medium text-teal-solid">
        Read More
        <svg class="h-4 w-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </span>
    </div>
  </a>
) : (
  <a href={href} class="group block overflow-hidden rounded-xl border border-border bg-white transition-all hover:shadow-card-hover">
    <div class="relative h-48 bg-bg-light overflow-hidden">
      {image ? (
        <img src={image} alt={title} class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105" loading="lazy" />
      ) : (
        <div class="flex h-full items-center justify-center">
          <span class="font-accent text-xl text-text-muted">Image</span>
        </div>
      )}
    </div>
    <div class="p-6">
      <div class="flex items-center gap-2 text-xs text-text-muted">
        <span class="font-medium text-teal-solid">{category}</span>
        <span class="h-1 w-1 rounded-full bg-text-muted" />
        <span>{date}</span>
      </div>
      <h3 class="mt-2 font-accent text-h4 font-medium text-heading transition-colors group-hover:text-teal-solid">
        {title}
      </h3>
      <p class="mt-2 text-sm leading-relaxed text-text-body line-clamp-2">
        {description}
      </p>
      <span class="mt-3 inline-flex items-center gap-2 text-sm font-medium text-teal-solid">
        Read More
        <svg class="h-4 w-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </span>
    </div>
  </a>
)}
