---
interface Props {
  name: string
  role: string
  bio?: string
}

const { name, role, bio } = Astro.props
---

<div class="rounded-xl border border-border bg-white p-6 text-center shadow-card">
  <div class="mx-auto h-24 w-24 rounded-full bg-bg-light flex items-center justify-center">
    <span class="font-accent text-2xl text-text-body/40">
      {name.split(' ').map(n => n[0]).join('')}
    </span>
  </div>
  <h3 class="mt-4 text-h4 font-bold text-text-dark">{name}</h3>
  <p class="mt-1 text-sm font-semibold text-accent-blue">{role}</p>
  {bio && <p class="mt-3 text-sm leading-relaxed text-text-body">{bio}</p>}
</div>
