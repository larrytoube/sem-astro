---
import SEMLayout from '../../layouts/SEMLayout.astro'
import SEMHero from '../../components/sem/SEMHero.astro'
import SEMCTASection from '../../components/sem/SEMCTASection.astro'

const posts = [
  { title: 'Workflow Optimization Trends Shaping 2025', category: 'Workflow Optimization', date: 'May 2025', excerpt: 'Optimizing workflows helps organizations streamline processes, boost productivity, cut costs, and improve overall results.' },
  { title: 'The End of the Facebook Pixel Era: What It Means for Marketers', category: 'Digital Marketing', date: 'October 2024', excerpt: "The disappearance of the Facebook Pixel isn't the end of data-driven marketing â€” it's the beginning of a new era. By leaning into first-party data strategies..." },
  { title: 'The Future of Social Media Marketing in 2025 and Beyond', category: 'Digital Marketing', date: 'June 2024', excerpt: 'The key to success lies in understanding your audience, creating valuable and engaging content, and leveraging the unique strengths of each platform.' },
  { title: 'The Benefits of Data Analytics in Personalized Marketing', category: 'Data Analytics', date: 'June 2024', excerpt: 'Storytelling is a powerful tool for building brand loyalty and connecting with your audience on a deeper level.' },
]
---

<SEMLayout
  title="Blog"
  description="Marketing insights, strategies, and tips from the Sharp End Marketing team."
>
  <SEMHero
    title="Blog"
    subtitle="Insights and strategies to help you grow"
  />

  <section class="px-6 py-20">
    <div class="mx-auto max-w-7xl">
      <div class="grid gap-8 md:grid-cols-2">
        {posts.map(post => (
          <article class="rounded-xl border border-border bg-white p-6 shadow-card">
            <span class="text-xs font-bold uppercase tracking-wider text-accent-blue">{post.category}</span>
            <h2 class="mt-2 text-h4 font-bold text-text-dark">{post.title}</h2>
            <p class="mt-1 text-caption text-text-body/60">{post.date}</p>
            <p class="mt-3 text-sm leading-relaxed text-text-body">{post.excerpt}</p>
          </article>
        ))}
      </div>
    </div>
  </section>

  <SEMCTASection
    title="Ready to Elevate Your Brand?"
    description="Partner with Sharp End and let's create something extraordinary together."
    ctaText="Get in Touch"
    ctaHref="/contact"
  />
</SEMLayout>
