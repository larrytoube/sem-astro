---
import SEMLayout from '../layouts/SEMLayout.astro'
import ContactForm from '../components/ContactForm.tsx'
---

<SEMLayout
  title="Contact"
  description="Get in touch with Sharp End Marketing. Let's discuss how we can help grow your brand with strategic marketing."
>
  <section class="px-6 py-20">
    <div class="mx-auto max-w-2xl">
      <div class="text-center">
        <h1 class="font-accent text-h1 font-bold text-text-dark">Let's Talk</h1>
        <p class="mt-4 text-lead text-text-body">
          Ready to elevate your brand? Fill out the form below and we'll get back to you within one business day.
        </p>
      </div>
      <div class="mt-12 rounded-xl border border-border bg-white p-8 shadow-card">
        <ContactForm client:visible />
      </div>
    </div>
  </section>
</SEMLayout>
