---
import SEMLayout from '../../layouts/SEMLayout.astro'
import SEMHero from '../../components/sem/SEMHero.astro'
import SEMCTASection from '../../components/sem/SEMCTASection.astro'

const offerings = [
  {
    title: 'Technical SEO Audits',
    description: 'Comprehensive site audits to identify and fix technical issues that hold back your rankings.',
  },
  {
    title: 'Keyword Research',
    description: 'Discover the search terms your ideal customers use and build a strategy around them.',
  },
  {
    title: 'On-Page Optimization',
    description: 'Optimize your content, meta tags, and site structure to maximize search visibility.',
  },
  {
    title: 'Link Building Strategy',
    description: 'Earn high-quality backlinks that boost your domain authority and drive referral traffic.',
  },
]
---

<SEMLayout
  title="SEO"
  description="Search engine optimization that delivers sustainable organic growth. Sharp End Marketing helps you be found by those who matter most."
>
  <!-- Hero -->
  <SEMHero
    label="Services"
    title="Search Engine Optimization"
    subtitle="Be found by those who matter most for organic growth â€” sustainable results."
  />

  <!-- What We Offer -->
  <section class="px-6 py-20">
    <div class="mx-auto max-w-4xl">
      <h2 class="font-accent text-h2 font-medium text-heading">What We Offer</h2>
      <ul class="mt-8 space-y-4">
        {offerings.map(item => (
          <li class="flex gap-3">
            <span class="mt-1 text-teal-solid font-bold">&#10003;</span>
            <div>
              <h3 class="font-medium text-heading">{item.title}</h3>
              <p class="mt-1 text-sm text-text-body">{item.description}</p>
            </div>
          </li>
        ))}
      </ul>
    </div>
  </section>

  <!-- Why This Matters -->
  <section class="bg-bg-light px-6 py-20">
    <div class="mx-auto max-w-4xl text-center">
      <h2 class="font-accent text-h2 font-medium text-heading">Why This Matters</h2>
      <p class="mt-6 text-body-lg leading-relaxed text-text-body">
        Organic search is one of the highest-value marketing channels because it compounds over time. Unlike paid ads that stop the moment you turn them off, a well-executed SEO strategy keeps delivering traffic, leads, and revenue month after month.
      </p>
    </div>
  </section>

  <!-- CTA -->
  <SEMCTASection
    title="Let's Discuss Your Project"
    description="Ready to take your marketing to the next level?"
    ctaText="Contact Us"
    ctaHref="/contact"
  />
</SEMLayout>
