---
import SEMLayout from '../../layouts/SEMLayout.astro'
import SEMHero from '../../components/sem/SEMHero.astro'
import SEMCTASection from '../../components/sem/SEMCTASection.astro'

const offerings = [
  {
    title: 'Campaign Strategy',
    description: 'Data-driven marketing plans designed to reach the right audience at the right time.',
  },
  {
    title: 'Email Marketing',
    description: 'Nurture leads and retain customers with targeted email sequences that convert.',
  },
  {
    title: 'Content Marketing',
    description: 'Create valuable, relevant content that attracts your ideal customers and builds authority.',
  },
  {
    title: 'Analytics & Reporting',
    description: 'Transparent reporting and actionable insights so you always know what is working.',
  },
]
---

<SEMLayout
  title="Digital Marketing"
  description="Comprehensive digital marketing solutions that drive real-world results. Sharp End Marketing tailors strategies to your unique business goals."
>
  <!-- Hero -->
  <SEMHero
    label="Services"
    title="Digital Marketing"
    subtitle="Digital solutions that drive real-world results."
  />

  <!-- What We Offer -->
  <section class="px-6 py-20">
    <div class="mx-auto max-w-4xl">
      <h2 class="font-accent text-h2 font-medium text-heading">What We Offer</h2>
      <ul class="mt-8 space-y-4">
        {offerings.map(item => (
          <li class="flex gap-3">
            <span class="mt-1 text-teal-solid font-bold">&#10003;</span>
            <div>
              <h3 class="font-medium text-heading">{item.title}</h3>
              <p class="mt-1 text-sm text-text-body">{item.description}</p>
            </div>
          </li>
        ))}
      </ul>
    </div>
  </section>

  <!-- Why This Matters -->
  <section class="bg-bg-light px-6 py-20">
    <div class="mx-auto max-w-4xl text-center">
      <h2 class="font-accent text-h2 font-medium text-heading">Why This Matters</h2>
      <p class="mt-6 text-body-lg leading-relaxed text-text-body">
        Digital marketing is more than just running ads. It is about creating a cohesive strategy that connects your brand with the people who need it most. We bring together campaign planning, content, email, and analytics into a unified approach that delivers measurable results.
      </p>
    </div>
  </section>

  <!-- CTA -->
  <SEMCTASection
    title="Let's Discuss Your Project"
    description="Ready to take your marketing to the next level?"
    ctaText="Contact Us"
    ctaHref="/contact"
  />
</SEMLayout>
