---
import SEMLayout from '../../layouts/SEMLayout.astro'
import SEMHero from '../../components/sem/SEMHero.astro'
import SEMCTASection from '../../components/sem/SEMCTASection.astro'

const offerings = [
  {
    title: 'Brand Positioning',
    description: 'Define where your brand sits in the market and how it stands apart from the competition.',
  },
  {
    title: 'Competitive Analysis',
    description: 'Deep-dive research into your competitive landscape to uncover opportunities and threats.',
  },
  {
    title: 'Messaging Frameworks',
    description: 'Craft clear, consistent messaging that resonates with your target audience across every touchpoint.',
  },
  {
    title: 'Visual Identity Guidelines',
    description: 'Establish a cohesive visual language — logos, colors, typography — that reinforces your brand story.',
  },
]
---

<SEMLayout
  title="Brand Strategy"
  description="Build a strategic brand foundation that bridges your vision with measurable results. Sharp End Marketing helps you plan smarter."
>
  <!-- Hero -->
  <SEMHero
    label="Services"
    title="Brand Strategy"
    subtitle="Plan smarter, not harder. Strategy is the bridge between dreams and results."
  />

  <!-- What We Offer -->
  <section class="px-6 py-20">
    <div class="mx-auto max-w-4xl">
      <h2 class="font-accent text-h2 font-medium text-heading">What We Offer</h2>
      <ul class="mt-8 space-y-4">
        {offerings.map(item => (
          <li class="flex gap-3">
            <span class="mt-1 text-teal-solid font-bold">&#10003;</span>
            <div>
              <h3 class="font-medium text-heading">{item.title}</h3>
              <p class="mt-1 text-sm text-text-body">{item.description}</p>
            </div>
          </li>
        ))}
      </ul>
    </div>
  </section>

  <!-- Why This Matters -->
  <section class="bg-bg-light px-6 py-20">
    <div class="mx-auto max-w-4xl text-center">
      <h2 class="font-accent text-h2 font-medium text-heading">Why This Matters</h2>
      <p class="mt-6 text-body-lg leading-relaxed text-text-body">
        A strong brand strategy is the foundation for every marketing effort. Without it, campaigns lack direction and budgets get wasted. We help you define who you are, who you serve, and why it matters — so every dollar you invest works harder for you.
      </p>
    </div>
  </section>

  <!-- CTA -->
  <SEMCTASection
    title="Let's Discuss Your Project"
    description="Ready to take your marketing to the next level?"
    ctaText="Contact Us"
    ctaHref="/contact"
  />
</SEMLayout>
