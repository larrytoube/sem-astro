---
import SEMLayout from '../../layouts/SEMLayout.astro'
import SEMHero from '../../components/sem/SEMHero.astro'
import SEMCTASection from '../../components/sem/SEMCTASection.astro'

const offerings = [
  {
    title: 'Content Calendar Planning',
    description: 'Strategic content calendars that keep your social presence consistent and on-brand.',
  },
  {
    title: 'Community Management',
    description: 'Engage your audience, respond to conversations, and build a loyal following around your brand.',
  },
  {
    title: 'Influencer Partnerships',
    description: 'Connect with the right voices in your industry to amplify reach and credibility.',
  },
  {
    title: 'Social Analytics',
    description: 'Track performance metrics that matter and refine your strategy based on real data.',
  },
]
---

<SEMLayout
  title="Social Media Marketing"
  description="Social media management that brings your brand story to life and sparks meaningful engagement with your audience."
>
  <!-- Hero -->
  <SEMHero
    label="Services"
    title="Social Media Marketing"
    subtitle="Where your brand story comes alive and sparks engagement."
  />

  <!-- What We Offer -->
  <section class="px-6 py-20">
    <div class="mx-auto max-w-4xl">
      <h2 class="font-accent text-h2 font-medium text-heading">What We Offer</h2>
      <ul class="mt-8 space-y-4">
        {offerings.map(item => (
          <li class="flex gap-3">
            <span class="mt-1 text-teal-solid font-bold">&#10003;</span>
            <div>
              <h3 class="font-medium text-heading">{item.title}</h3>
              <p class="mt-1 text-sm text-text-body">{item.description}</p>
            </div>
          </li>
        ))}
      </ul>
    </div>
  </section>

  <!-- Why This Matters -->
  <section class="bg-bg-light px-6 py-20">
    <div class="mx-auto max-w-4xl text-center">
      <h2 class="font-accent text-h2 font-medium text-heading">Why This Matters</h2>
      <p class="mt-6 text-body-lg leading-relaxed text-text-body">
        Social media is where your customers spend their time and form opinions about brands. A well-managed social presence builds trust, drives engagement, and turns followers into advocates. We help you show up consistently with content that resonates.
      </p>
    </div>
  </section>

  <!-- CTA -->
  <SEMCTASection
    title="Let's Discuss Your Project"
    description="Ready to take your marketing to the next level?"
    ctaText="Contact Us"
    ctaHref="/contact"
  />
</SEMLayout>
