---
import SEMLayout from '../../layouts/SEMLayout.astro'
import SEMSectionHeader from '../../components/sem/SEMSectionHeader.astro'
import SEMServiceCard from '../../components/sem/SEMServiceCard.astro'
import SEMProcessStep from '../../components/sem/SEMProcessStep.astro'
import SEMCTASection from '../../components/sem/SEMCTASection.astro'

const services = [
  { number: '01', title: 'Brand Strategy', description: 'Plan smarter, not harder. Strategy is the bridge between dreams and results.', href: '/services/brand-strategy' },
  { number: '02', title: 'Digital Marketing', description: "Digital solutions that drive real-world results. Let's us tailor a solution for you.", href: '/services/digital-marketing' },
  { number: '03', title: 'SEO', description: 'Be found by those who matter most for organic growth - sustainable results.', href: '/services/seo' },
  { number: '04', title: 'Social Media Marketing', description: 'Where your brand story comes alive and sparks engagement. Inspire and grow your digital community.', href: '/services/social-media' },
  { number: '05', title: 'Paid Advertising', description: 'Stop guessing and start targeting - precision advertising.', href: '/services/paid-advertising' },
  { number: '06', title: 'Creative Design', description: 'From concept to completion; websites, video, graphics and photography, we have you covered', href: '/services/creative-design' },
  { number: '07', title: 'AI Workflow Optimization', description: 'We design AI-powered applications that will streamline processes and systems, saving you time and money.', href: '/services/ai-workflow' },
]

const processSteps = [
  { number: 1, title: 'Discover & Strategize', description: 'We dive deep into understanding your brand, audience, and goals to craft a custom strategy that aligns with your vision.' },
  { number: 2, title: 'Create & Execute', description: 'Our team brings your strategy to life with innovative campaigns, content, and designs that resonate with your audience.' },
  { number: 3, title: 'Analyze & Optimize', description: 'We continuously monitor the performance of your campaigns, making data-driven adjustments to ensure optimal results.' },
]
---

<SEMLayout
  title="Digital Marketing & Social Media Services"
  description="Explore Sharp End Marketing's full range of services — from brand strategy and SEO to creative design and AI workflow optimization."
>
  <!-- Hero -->
  <section class="px-6 pt-12 pb-16">
    <div class="mx-auto max-w-7xl">
      <p class="section-label mb-4">
        <svg class="h-4 w-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.455 2.456L21.75 6l-1.036.259a3.375 3.375 0 00-2.455 2.456z" />
        </svg>
        SHARPEN YOUR MARKETING SYSTEMS
      </p>
      <div class="grid items-center gap-12 md:grid-cols-2">
        <div>
          <h1 class="font-accent text-h1 font-medium text-heading md:text-hero">Digital Marketing & Social Media Services</h1>
          <p class="mt-6 text-body-lg leading-relaxed text-text-body">
            Update your digital marketing & social media presence to align with your ideal prospect. Whether you want to generate more leads, make more sales or improve awareness with your target audience. Our services are designed to amplify your brand's presence, increase visibility and drive results.
          </p>
          <p class="mt-4 text-body-lg leading-relaxed text-text-body">
            <a href="/contact" class="font-medium text-teal-solid hover:underline">Contact us today</a> to see if your eligible for our no-obligation mini audit of your website and social media.
          </p>
        </div>
        <div class="relative">
          <img
            src="/images/services/services-hero.jpg"
            alt="Digital marketing services"
            class="w-full rounded-xl object-cover"
            loading="eager"
          />
          <div class="absolute right-4 top-4 flex flex-col gap-3">
            <span class="rounded-full bg-teal-solid px-4 py-2 text-sm font-medium text-white">Brand Strategy</span>
            <span class="rounded-full bg-teal-solid px-4 py-2 text-sm font-medium text-white">Digital Marketing</span>
            <span class="rounded-full bg-teal-solid px-4 py-2 text-sm font-medium text-white">Paid Advertising</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Our Offerings -->
  <section class="px-6 py-20">
    <div class="mx-auto max-w-7xl">
      <SEMSectionHeader
        label="OUR SERVICES"
        icon="brush"
        title="Our Offerings at SEM"
        subtitle="Explore our services below and discover how we can help you achieve your business goals."
      />
      <div class="mt-12 grid gap-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
        {services.map(service => (
          <SEMServiceCard {...service} />
        ))}
      </div>
    </div>
  </section>

  <!-- Process: From Vision to Victory -->
  <section class="bg-bg-light px-6 py-20">
    <div class="mx-auto max-w-7xl">
      <SEMSectionHeader
        label="OUR PROCESS"
        icon="route"
        title="From Vision to Victory"
        subtitle="Our streamlined process is designed to deliver outstanding results at every stage of your marketing journey. Here's how we do it:"
      />
      <div class="mt-12 grid items-start gap-12 lg:grid-cols-2">
        <div class="overflow-hidden rounded-xl">
          <img
            src="/images/services/process-road.jpg"
            alt="Our process - the road to success"
            class="w-full h-auto rounded-xl object-cover"
            loading="lazy"
          />
        </div>
        <div class="grid gap-10">
          {processSteps.map(step => (
            <SEMProcessStep {...step} />
          ))}
          <a href="/contact" class="btn-sem w-fit">
            Get Started
            <svg class="h-4 w-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonial -->
  <section class="px-6 py-20">
    <div class="mx-auto max-w-3xl text-center">
      <svg class="mx-auto h-10 w-10 text-teal-solid opacity-30" fill="currentColor" viewBox="0 0 24 24">
        <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10H14.017zM0 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151C7.546 6.068 5.983 8.789 5.983 11h4v10H0z" />
      </svg>
      <blockquote class="mt-6 font-accent text-h3 font-medium leading-snug text-heading">
        "Working with Sharp End Marketing has been a game-changer for our brand. They didn't just understand our vision — they elevated it."
      </blockquote>
    </div>
  </section>

  <!-- CTA -->
  <SEMCTASection
    title="Ready to Elevate Your Brand?"
    description="Partner with Sharp End and let's create something extraordinary together."
    ctaText="Get in Touch"
    ctaHref="/contact"
  />
</SEMLayout>
