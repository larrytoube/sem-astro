---
import SEMLayout from '../../layouts/SEMLayout.astro'
import SEMHero from '../../components/sem/SEMHero.astro'
import SEMCTASection from '../../components/sem/SEMCTASection.astro'
import SEMServiceCard from '../../components/sem/SEMServiceCard.astro'

const services = [
  {
    number: '01',
    title: 'Brand Strategy',
    description: 'Plan smarter, not harder. Strategy is the bridge between dreams and results.',
    href: '/services/brand-strategy',
  },
  {
    number: '02',
    title: 'Digital Marketing',
    description: 'Digital solutions that drive real-world results. Let us tailor a solution for you.',
    href: '/services/digital-marketing',
  },
  {
    number: '03',
    title: 'SEO',
    description: 'Be found by those who matter most for organic growth — sustainable results.',
    href: '/services/seo',
  },
  {
    number: '04',
    title: 'Social Media Marketing',
    description: 'Where your brand story comes alive and sparks engagement. Inspire and grow your digital community.',
    href: '/services/social-media',
  },
  {
    number: '05',
    title: 'Paid Advertising',
    description: 'Stop guessing and start targeting — precision advertising.',
    href: '/services/paid-advertising',
  },
  {
    number: '06',
    title: 'Creative Design',
    description: 'From concept to completion; websites, video, graphics and photography, we have you covered.',
    href: '/services/creative-design',
  },
  {
    number: '07',
    title: 'AI Workflow Optimization',
    description: 'We design AI-powered applications that will streamline processes and systems. Saving time and money.',
    href: '/services/ai-workflow',
  },
]
---

<SEMLayout
  title="Our Services"
  description="Explore Sharp End Marketing's full range of services — from brand strategy and SEO to creative design and AI workflow optimization."
>
  <!-- Hero -->
  <SEMHero
    title="Our Services"
    subtitle="Comprehensive marketing solutions tailored to your business goals."
  />

  <!-- Services Grid -->
  <section class="px-6 py-20">
    <div class="mx-auto max-w-7xl">
      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
        {services.map(service => (
          <SEMServiceCard {...service} />
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <SEMCTASection
    title="Let's Discuss Your Project"
    description="Ready to take your marketing to the next level?"
    ctaText="Contact Us"
    ctaHref="/contact"
  />
</SEMLayout>
